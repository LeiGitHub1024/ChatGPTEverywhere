{
  "name": "ChatGPTEverywhere",
  "description": "在任何位置使用chatgpt",
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "48": "images/48.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "manifest_version": 3,
  "version": "1.0.0",
  "permissions": ["storage","tabs","activeTab", "declarativeContent"  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.js"],
      "type": "module",
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageScript/main.js","chatgpttooltip-injected-by-alyosha1024.js","test.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "host_permissions": ["http://*/", "https://*/"]

}